{
  "name": "bc-claude-agent-backend",
  "version": "1.0.0",
  "description": "Backend server for BC Claude Agent - Express + TypeScript + Socket.IO",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migrate": "node -r ts-node/register scripts/migrate.ts",
    "seed": "node -r ts-node/register scripts/seed.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "verify": "npm run type-check",
    "prepush": "npm run verify"
  },
  "keywords": [
    "business-central",
    "claude",
    "agent",
    "mcp",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "5.1.0",
    "socket.io": "4.8.1",
    "mssql": "12.0.0",
    "redis": "5.9.0",
    "@anthropic-ai/sdk": "0.68.0",
    "@modelcontextprotocol/sdk": "1.20.2",
    "bcrypt": "6.0.0",
    "jsonwebtoken": "9.0.2",
    "dotenv": "17.2.3",
    "cors": "2.8.5",
    "@azure/identity": "4.13.0",
    "@azure/keyvault-secrets": "4.10.0",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "typescript": "5.9.3",
    "@types/node": "24.9.2",
    "@types/express": "5.0.5",
    "@types/bcrypt": "6.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/cors": "2.8.19",
    "@types/mssql": "9.1.8",
    "ts-node": "10.9.2",
    "nodemon": "3.1.10",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "eslint": "9.38.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
