{
  "name": "bc-claude-agent-backend",
  "version": "1.0.0",
  "description": "Backend server for BC Claude Agent - Express + TypeScript + Socket.IO",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/server.ts",
    "build": "swc src -d dist --strip-leading-paths && tsc-alias",
    "build:tsc": "tsc && tsc-alias",
    "build:mcp": "cd mcp-server && npm run build",
    "build:all": "npm run build && npm run build:mcp",
    "start": "node dist/server.js",
    "migrate": "node -r ts-node/register scripts/migrate.ts",
    "seed": "node -r ts-node/register scripts/seed.ts",
    "capture:websocket": "tsx scripts/capture-websocket-events.ts",
    "test": "vitest run && npm run test:integration",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:files": "vitest run --config vitest.integration.config.ts src/__tests__/integration/files/",
    "pretest:e2e": "node scripts/e2e-prerequisites.js",
    "test:e2e": "node scripts/e2e-prerequisites.js && vitest run --config vitest.e2e.config.ts",
    "azurite:start": "azurite --silent --location ./azurite-data --blobPort 10000 --queuePort 10001 --tablePort 10002",
    "azurite:clean": "powershell -Command \"Remove-Item -Recurse -Force -ErrorAction SilentlyContinue azurite-data; Remove-Item -Force -ErrorAction SilentlyContinue azurite-debug.log\"",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "cache:clear": "powershell -Command \"Remove-Item -Recurse -Force -ErrorAction SilentlyContinue 'node_modules/.vite'; Remove-Item -Recurse -Force -ErrorAction SilentlyContinue 'node_modules/.vitest'\"",
    "test:integration:clean": "npm run cache:clear && npm run test:integration",
    "test:e2e:clean": "npm run cache:clear && npm run test:e2e",
    "lint": "eslint src/**/*.ts",
    "type-check": "git diff --name-only --diff-filter=d HEAD~1 | grep '\\.ts$' | xargs -r npx tsc --noEmit",
    "verify": "npm run build",
    "verify:all": "npm run build && npm run lint && npm run type-check && npm run test:all",
    "prepush": "npm run verify"
  },
  "keywords": [
    "business-central",
    "claude",
    "agent",
    "mcp",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "0.71.0",
    "@azure/ai-form-recognizer": "5.1.0",
    "@azure/identity": "4.13.0",
    "@azure/keyvault-secrets": "4.10.0",
    "@azure/msal-node": "3.8.1",
    "@azure/openai": "2.0.0",
    "@azure/search-documents": "12.2.0",
    "@azure/storage-blob": "12.29.1",
    "@bc-agent/shared": "*",
    "@langchain/anthropic": "1.2.3",
    "@langchain/core": "1.1.4",
    "@langchain/google-vertexai": "2.0.4",
    "@langchain/langgraph": "1.0.4",
    "@langchain/openai": "1.1.3",
    "bcrypt": "6.0.0",
    "bcryptjs": "2.4.3",
    "bullmq": "5.63.2",
    "connect-redis": "7.1.1",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "express-session": "1.18.1",
    "ioredis": "5.8.2",
    "jsonwebtoken": "9.0.2",
    "mammoth": "1.11.0",
    "mssql": "12.1.0",
    "multer": "2.0.2",
    "openai": "6.10.0",
    "pino": "9.6.0",
    "pino-http": "10.3.0",
    "pino-pretty": "13.0.0",
    "redis": "5.9.0",
    "socket.io": "4.8.1",
    "socket.io-client": "4.8.1",
    "xlsx": "0.18.5",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.5",
    "@types/bcrypt": "6.0.0",
    "@types/bcryptjs": "2.4.6",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/express-session": "1.18.1",
    "@types/jsonwebtoken": "9.0.10",
    "@types/mssql": "9.1.8",
    "@types/multer": "2.0.0",
    "@types/node": "24.10.0",
    "@types/pino": "7.0.5",
    "@types/supertest": "6.0.2",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "8.46.4",
    "@typescript-eslint/parser": "8.46.4",
    "@vitest/coverage-v8": "2.1.8",
    "@vitest/ui": "2.1.8",
    "azurite": "3.35.0",
    "eslint": "9.39.1",
    "husky": "9.1.7",
    "msw": "2.6.0",
    "nodemon": "3.1.10",
    "start-server-and-test": "2.1.3",
    "supertest": "7.0.0",
    "ts-node": "10.9.2",
    "tsc-alias": "1.8.16",
    "tsconfig-paths": "4.2.0",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
